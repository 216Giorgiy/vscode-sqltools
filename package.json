{
  "name": "sqltools",
  "displayName": "SQLTools",
  "description": "",
  "version": "0.0.1",
  "publisher": "mtxr",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onLanguage:sql",
    "onLanguage:javascript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "SQLTools.formatSql",
        "title": "SQLTools: Format SQL"
      },
      {
        "command": "SQLTools.saveQuery",
        "title": "SQLTools: Save selected query"
      },
      {
        "command": "SQLTools.deleteSavedQuery",
        "title": "SQLTools: Delete saved query"
      },
      {
        "command": "SQLTools.editSavedQuery",
        "title": "SQLTools: Edit saved query"
      },
      {
        "command": "SQLTools.showOutputChannel",
        "title": "SQLTools: Show output channel (Logs)"
      },
      {
        "command": "SQLTools.aboutVersion",
        "title": "SQLTools: Version"
      }
    ],
    "keybindings": [
      {
        "command": "SQLTools.formatSql",
        "key": "ctrl+e ctrl+b",
        "mac": "cmd+e cmd+b",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SQLTools Settings",
      "properties": {
        "sqltools.logging": {
          "type": "boolean",
          "default": true,
          "description": "Show debugging messages on console."
        },
        "sqltools.log_level": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR"
          ],
          "default": "DEBUG",
          "description": "Show debugging messages on console."
        },
        "sqltools.query_timeout": {
          "type": "number",
          "default": 300000,
          "decription": "Timeout in seconds for killing query process after the timeout."
        },
        "sqltools.history_size": {
          "type": "number",
          "default": 100,
          "decription": "Number of queries to keep on History."
        },
        "sqltools.show_result_on_tab": {
          "type": "boolean",
          "default": false,
          "decription": "Show results using new tab."
        },
        "sqltools.clear_output": {
          "type": "boolean",
          "default": false,
          "decription": "Clear output for new commands."
        },
        "sqltools.connections": {
          "type": "array",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",       "postinstall": "node ./node_modules/vscode/bin/install",
    "test-vscode": "node ./node_modules/vscode/bin/test",
    "test": "mocha -c --recursive --compilers ts:ts-node/register test/",
    "test:coverage": "nyc npm t"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.32",
    "chai": "^3.5.0",
    "semver": "^5.3.0",
    "sinon": "^1.17.7",
    "ts-node": "^2.1.0"
  },
  "dependencies": {
    "jsonc-parser": "^0.4.1",
    "sql-formatter": "^1.1.1"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
