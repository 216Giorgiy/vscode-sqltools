{
  "name": "sqltools",
  "displayName": "SQLTools",
  "description": "",
  "version": "0.1.3",
  "publisher": "mtxr",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onLanguage:sql",
    "onLanguage:javascript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "SQLTools.formatSql",
        "title": "SQLTools: Format SQL"
      },
      {
        "command": "SQLTools.bookmarkSelection",
        "title": "SQLTools: Bookmark selection"
      },
      {
        "command": "SQLTools.deleteBookmark",
        "title": "SQLTools: Delete a bookmark"
      },
      {
        "command": "SQLTools.clearBookmarks",
        "title": "SQLTools: Delete all bookmarks"
      },
      {
        "command": "SQLTools.editBookmark",
        "title": "SQLTools: Edit a bookmarked"
      },
      {
        "command": "SQLTools.showOutputChannel",
        "title": "SQLTools: Show output channel (Logs)"
      },
      {
        "command": "SQLTools.aboutVersion",
        "title": "SQLTools: Version"
      }
    ],
    "keybindings": [
      {
        "command": "SQLTools.formatSql",
        "key": "ctrl+e ctrl+b",
        "mac": "cmd+e cmd+b",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SQLTools Settings",
      "properties": {
        "sqltools.logging": {
          "type": "boolean",
          "default": true,
          "description": "Show debugging messages on console."
        },
        "sqltools.log_level": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR"
          ],
          "default": "DEBUG",
          "description": "Show debugging messages on console."
        },
        "sqltools.query_timeout": {
          "type": "number",
          "default": 300000,
          "decription": "Timeout in seconds for killing query process after the timeout."
        },
        "sqltools.history_size": {
          "type": "number",
          "default": 100,
          "decription": "Number of queries to keep on History."
        },
        "sqltools.show_result_on_tab": {
          "type": "boolean",
          "default": false,
          "decription": "Show results using new tab."
        },
        "sqltools.clear_output": {
          "type": "boolean",
          "default": false,
          "decription": "Clear output for new commands."
        },
        "sqltools.connections": {
          "type": "array",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "gulp",
    "compile": "gulp watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "gulp compile && node ./node_modules/vscode/bin/test",
    "test:coverage": "gulp pre-coverage:vscode && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "decache": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.1.1",
    "gulp-mocha": "^3.0.1",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-typescript": "^3.1.6",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.5",
    "remap-istanbul": "^0.6.4",
    "semver": "^5.3.0",
    "sinon": "^1.17.7",
    "source-map-support": "^0.4.14",
    "ts-node": "^2.1.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "jsonc-parser": "^0.4.1",
    "sql-formatter-sqltools": "^1.2.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
