{
  "name": "sqltools",
  "displayName": "SQLTools",
  "description": "",
  "version": "0.0.1",
  "publisher": "mtxr",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
   "activationEvents": [
        "onLanguage:sql",
        "onLanguage:javascript",
        "onCommand:sqltools.formatSql"
    ],
  "main": "./out/src/extension",
  "contributes": {
      "commands": [{
        "command": "sqltools.formatSql",
        "title": "SQLTools: Format SQL"
      }],
      "keybindings": [{
        "command": "sqltools.formatSql",
        "key": "ctrl+e ctrl+b",
        "mac": "cmd+e cmd+b",
        "when": "editorTextFocus"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "sql-formatter": "^1.1.1"
  }
}
